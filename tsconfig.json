{
  "compilerOptions": {
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    // "declaration": true,
    "strict": true,
    // "noImplicitReturns": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "noImplicitAny": true,
    "lib": ["esnext", "es2017.object", "dom"],
    "target": "esnext",
    "baseUrl": ".",
    "types": ["jasmine"]
  },
  "exclude": [
    "node_modules/",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "src/schema_parser/**/*",
    "src/examples/**/*"
  ],
  "include": ["src/**/*.ts"]
}
